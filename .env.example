# Server Configuration
NODE_ENV=development
PORT=3000

# Gateway Configuration
GATEWAY_URL=http://localhost:5000

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=24h

# CORS Configuration (Important: credentials must be enabled for cookies)
CORS_ORIGIN=http://localhost:4200

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# API Timeouts (milliseconds)
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3
API_RETRY_DELAY=1000

# Redis Configuration (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_ENABLED=true

# Cookie Configuration (automatically set based on NODE_ENV)
# In production: httpOnly=true, secure=true, sameSite=strict
# In development: httpOnly=true, secure=false, sameSite=lax
